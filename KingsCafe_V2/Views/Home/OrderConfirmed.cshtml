@model KingsCafe_V2.Models.Order
@using KingsCafe_V2.Models

@{
    
    Layout = "~/Views/Shared/_Layout.cshtml";
    decimal total = 0;
}


<form action="/Cart/OrderBooked" method="post">

    <div id="content">

        <section class="banner dark">
            <div id="myccount-parallax">
                <div class="bcg background39"
                     data-center="background-position: 50% 0px;"
                     data-bottom-top="background-position: 50% 100px;"
                     data-top-bottom="background-position: 50% -100px;"
                     data-anchor-target="#myccount-parallax">
                    <div class="bg-transparent">
                        <div class="banner-content">
                            <div class="container">
                                <div class="slider-content  ">

                                    <h1>Order Booked</h1>

                                </div>
                            </div>
                        </div>
                        <!-- End Banner content -->
                    </div>
                    <!-- End bg trnsparent -->
                </div>
            </div>
            <!-- Service parallax -->
        </section>
        <!-- My Account
        ============================================= -->
        <section class="myaccount text-left padding-100">
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <!-- Table carts -->
                        <table class="table table-striped table-responsive table-cart">
                            <thead>
                                <tr>
                                    <th style="width:40%">Product Image</th>
                                    <th style="width:15%">Price</th>
                                    <th style="width:20%">Quantity</th>
                                    <th style="width:25%">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in (List<CartItem>)ViewBag.Items)
                                {
                                    total += (decimal)item.foodItem.SalePrice * item.quantity;
                                    <tr>
                                        <td>
                                            <a href="menu_single.html">
                                                <img src="@Url.Content(item.foodItem.Image)" style="width:100px; height:100px;"
                                                     alt="">@item.foodItem.Name
                                                </a>
                                            </td>
                                            <td>Rs. @item.foodItem.SalePrice</td>
                                            <td>
                                                @item.quantity

                                            </td>
                                            <td>
                                                <span class="total">
                                                    Rs.
                                                    @(item.foodItem.SalePrice*item.quantity)
                                                </span>
                                            </td>
                                        </tr>
                                    }
                            </tbody>
                        </table>
                        <!-- End Table carts -->
                    </div>
                    
                    <div class="col-md-6" style="padding:24px">
                        <!-- Table carts -->
                            <table class="table table-striped table-responsive table-cart">

                                <tr>
                                    <td>Name</td>
                                    <td>@Model.Name</td>
                                </tr>
                                <tr>
                                    <td>Email</td>
                                    <td>@Model.Email</td>
                                </tr>
                                <tr>
                                    <td>Phone</td>
                                    <td>@Model.Phone</td>
                                </tr>
                                <tr>
                                    <td>Address</td>
                                    <td>@Model.Address</td>
                                </tr>
                                <tr>
                                    <td>PaymentMethod</td>
                                    <td>@Model.PaymentMethod</td>
                                </tr>
                            </table>
                            <!-- End Table carts -->
                    </div>
                    <!-- Carts content -->
                    <div class="col-md-12 carts-content">
                        <div class="row">
                            <!-- Cart Total -->
                            <div class="col-md-4 carts-total text-left">
                                <h3>Carts Total</h3>
                                <table class="table table-bordered">
                                    <tbody>
                                        <tr>
                                            <td>Cart Subtotal</td>
                                            <td align="left">Rs. @total</td>
                                        </tr>
                                        <tr>
                                            <td>Shipping and Handling</td>
                                            <td>Rs. 200</td>
                                        </tr>
                                        <tr>
                                            <td>Order Total</td>
                                            <td>Rs. @(total+200)</td>
                                        </tr>
                                        <tr>
                                            <td>Estiated Time</td>
                                            <td>@(DateTime.Now.AddMinutes(30))</td>
                                        </tr>
                                    </tbody>
                                </table>
                               
                                <!-- Carts total -->
                            </div>
                            <!-- End # Cart Total -->
                            <!-- Shipping Address -->
                            <!--<div class="col-md-4">
                <div class="calc-shipping">
                    <h3>Shipping Address</h3>
                    <div class="form-group">
                        <input type="text" class="form-control"
                               placeholder="Full Name*" name="ORDER_CUSTOMER_NAME">
                        <input type="text" class="form-control"
                               placeholder="Address*" name="ORDER_CUSTOMER_ADDRESS">
                        <input type="tel" class="form-control"
                               placeholder="Phone Number*" name="ORDER_CUSTOMER_CONTACT">
                        <button type="submit" class="btn form-control btn-black"> Order Now </button>
                    </div>
                </div>-->
                            <!-- Shipping Address -->
                            <!--</div>-->
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- End myaccount -->
    </div>
    <!-- end of #content -->
</form>