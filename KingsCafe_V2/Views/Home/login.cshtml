

@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="banner about dark">
    <div id="login-parallax">
        <div class="bcg background39"
             data-center="background-position: 50% 0px;"
             data-bottom-top="background-position: 50% 100px;"
             data-top-bottom="background-position: 50% -100px;"
             data-anchor-target="#login-parallax">
            <div class="bg-transparent">
                <div class="banner-content">
                    <div class="container">
                        <div class="slider-content ">
                            <i class="icon-home-ico"></i>
                            <h1>Login</h1>
                            <p>Login into our amazing resturant</p>
                            <ol class="breadcrumb">
                                <li><a href="~/Views/Home/index.cshtml">Home</a></li>
                                <li>Login</li>
                            </ol>
                        </div>
                    </div>
                </div>
                <!-- End Banner content -->
            </div>
            <!-- End bg trnsparent -->
        </div>
    </div>
    <!-- Service parallax -->
</section>
<!-- End Banner -->
<div id="content">
    <!-- Login Default
    ============================================= -->
    <section class="padding-100 text-center login">
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 text-center">
                    <i class="icon-intro"></i>
                    <h1>Login</h1>
                    <h2 class="text-center wow fadeInUp">@ViewBag.message</h2>
                    <span class="welcome ">Login to continue</span>
                    <form>
                    </form>
                    <div class="form-group padding-50">
                        <form action="/Home/login" method="post">
                            <input type="email" class="form-control" name="Email" required placeholder="Enter your Email">
                            <input type="password" class="form-control" name="Password" required placeholder="Password">

                            <input type="radio" name="LogType"  value="Admin"   checked />Admin
                            <input type="radio" name="LogType"  value="Worker"   />Worker
                            <input type="radio" name="LogType"  value="Rider"   />Rider

                            <button type="submit" class="btn form-control btn-black">Login</button>

                        </form>
                    </div>
                    <div class="forget text-center">
                        <p><a href="#">I've forgotten my password <i class="fa fa-chevron-circle-right"></i></a></p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- End Login Default -->
</div>
