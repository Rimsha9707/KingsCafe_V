@model IEnumerable<KingsCafe_V2.Models.Ingredient>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Index</h2>

<p>
    <a class="btn btn-primary" href="@Url.Action("Create","Adm_Ingredients")">Create</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Type)
        </td>
        <td>
            <img src="@item.Image" width="100" height="100" />
        </td>
        <td>
            <a href="@Url.Action("Edit","Adm_Ingredients", new { id = item.IngredientID })" class="btn btn-primary glyphicon glyphicon-edit"></a> |
            <a href="@Url.Action("Details","Adm_Ingredients", new { id = item.IngredientID })" class="btn btn-success glyphicon glyphicon-book"></a> |
            <a href="@Url.Action("Delete","Adm_Ingredients", new { id = item.IngredientID })" class="btn btn-danger glyphicon glyphicon-remove"></a>
        </td>
    </tr>
}

</table>
