@model IEnumerable<KingsCafe_V2.Models.FoodItem>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Index</h2>

<p>
    <a class="btn btn-primary" href="@Url.Action("Create","Adm_FoodItems")">Create</a>
</p>
<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CatFID)
        </th>
       
        <th>
            SalePrice
        </th>
        <th>
            Image
        </th>
        
        <th>
            Rating
        </th>
        <th>
            Status
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.Name
        </td>
        <td>
            @item.CatFID
        </td>
     
        <td>
            @item.SalePrice
        </td>
        <td>
            <img src="@item.Image" width="100" height="100" />
        </td>
        
        <td>
            @item.Rating
        </td>
        <td>
            @item.Status
        </td>
        <td>
            <a href="@Url.Action("Edit","Adm_FoodItems", new { id = item.ItemID })" class="btn btn-primary glyphicon glyphicon-edit"></a> |
            <a href="@Url.Action("Details","Adm_FoodItems", new { id = item.ItemID })" class="btn btn-success glyphicon glyphicon-book"></a> |
            <a href="@Url.Action("Delete","Adm_FoodItems", new { id = item.ItemID })" class="btn btn-danger glyphicon glyphicon-remove"></a>
    </tr>
}

</table>
