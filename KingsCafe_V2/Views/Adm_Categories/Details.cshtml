@model KingsCafe_V2.Models.Category

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            Image
        </dt>

        <dd>
            <img src="@Model.Image" width="100" height="100" />
        </dd>

        <dt>
            Details
        </dt>

       

        <dt>
            Status
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Status)
        </dd>

    </dl>
</div>
<p>
    <a href="@Url.Action("Edit","Adm_Categories" , new { id = Model.CatID })" class="btn btn-primary glyphicon glyphicon-edit"> </a> |
    <a href="@Url.Action("Index","Adm_Categories")" class="btn btn-primary glyphicon glyphicon-backward"> </a>

</p>
